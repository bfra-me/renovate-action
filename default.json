{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": [
    "github>whitesource/merge-confidence:beta",
    "bfra-me/renovate-config:onboarding",
    ":ignoreModulesAndTests",
    ":preserveSemverRanges",
    ":rebaseStalePrs",
    ":prNotPending",
    ":prHourlyLimitNone",
    ":automergeBranch",
    ":maintainLockFilesWeekly",
    ":ignoreUnstable",
    ":updateNotScheduled",
    ":enableVulnerabilityAlertsWithLabel(security)",
    ":semanticCommits",
    "docker:enableMajor",
    "docker:pinDigests",
    "group:monorepos",
    "group:recommended",
    "helpers:disableTypesNodeMajor",
    "helpers:pinGitHubActionDigests",
    "npm:unpublishSafe",
    "replacements:all",
    "workarounds:all"
  ],

  "configMigration": true,
  "configWarningReuseIssue": false,

  "prConcurrentLimit": 5,

  "platformAutomerge": true,
  "internalChecksFilter": "strict",

  "schedule": [
    "after 4pm every weekday",
    "before 8am every weekday",
    "every weekend"
  ],
  "timezone": "America/Phoenix",

  "labels": ["dependencies"],

  "postUpdateOptions": ["gomodTidy", "npmDedupe", "yarnDedupeHighest"],

  "packageRules": [
    {
      "description": "Disable dependency dashboard approval for major updates",
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": false
    },
    {
      "description": "v prefix workaround for action updates",
      "matchDepTypes": ["action"],
      "extractVersion": "^(?<version>v\\d+\\.\\d+\\.\\d+)$",
      "versioning": "regex:^v(?<major>\\d+)(\\.(?<minor>\\d+)\\.(?<patch>\\d+))?$"
    }
  ]
}
