{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Use the default Renovate config preset for the @bfra-me organization.",
  "extends": [
    "config:base",
    "github>whitesource/merge-confidence:beta",
    "bfra-me/renovate-config:onboarding",
    ":preserveSemverRanges",
    ":rebaseStalePrs",
    ":prNotPending",
    ":prHourlyLimitNone",
    ":automergeBranch",
    ":maintainLockFilesWeekly",
    ":updateNotScheduled",
    ":enableVulnerabilityAlertsWithLabel(security)",
    ":semanticCommits",
    "docker:enableMajor",
    "docker:pinDigests",
    "helpers:disableTypesNodeMajor",
    "helpers:pinGitHubActionDigests",
    "replacements:all"
  ],

  "configMigration": true,
  "configWarningReuseIssue": false,

  "prConcurrentLimit": 5,

  "gitIgnoredAuthors": [
    "bot@renovateapp.com",
    "261136+bfra-me@users.noreply.github.com"
  ],
  "platformAutomerge": true,
  "internalChecksFilter": "strict",

  "schedule": [
    "after 4pm every weekday",
    "before 8am every weekday",
    "every weekend"
  ],
  "timezone": "America/Phoenix",

  "labels": ["dependencies"],

  "postUpdateOptions": ["gomodTidy", "npmDedupe", "yarnDedupeHighest"],

  "ignorePresets": [":ignoreModulesAndTests"],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/examples/**",
    "**/__tests__/**",
    "**/test/**",
    "**/tests/**",
    "**/__fixtures__/**",
    "**/out/**",
    "**/dist/**",
    "**/.yarn/**"
  ],

  "packageRules": [
    {
      "description": "Automerge update types that are not `major`",
      "matchUpdateTypes": [
        "patch",
        "pin",
        "pinDigest",
        "digest",
        "lockFileMaintenance"
      ],
      "automerge": true
    },
    {
      "description": "Automerge minor version updates (unless the major version is 0)",
      "matchUpdateTypes": ["minor"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "description": "Enable dependency dashboard approval for major updates (except Renovate)",
      "matchUpdateTypes": ["major"],
      "excludePackagePatterns": [
        "^renovate(bot)?($|\\/)",
        "^(renovate|(?:ghcr.io\\/)?containerbase)\\/buildpack$",
        "^@renovatebot\\/"
      ],
      "dependencyDashboardApproval": true
    },
    {
      "description": "Delay updates until npm packages are safe from unpublishing (except Renovate)",
      "matchDatasources": ["npm"],
      "excludePackageNames": ["renovate"],
      "excludePackagePrefixes": ["@renovatebot/"],
      "extends": ["npm:unpublishSafe"],
      "prNotPendingHours": 73
    },
    {
      "description": "v prefix workaround for action updates",
      "matchDepTypes": ["action"],
      "extractVersion": "^(?<version>v\\d+\\.\\d+\\.\\d+)$",
      "versioning": "regex:^v(?<major>\\d+)(\\.(?<minor>\\d+)\\.(?<patch>\\d+))?$"
    }
  ],
  "regexManagers": [
    {
      "description": "Update `version` and <*>`_VERSION` values in GitHub Actions and workflows.",
      "fileMatch": [
        "^action\\.ya?ml$",
        "^\\.github\\/(actions|workflows)\\/[^/]+\\.ya?ml$"
      ],
      "matchStrings": [
        "\\s+version: (?<currentValue>.+?) # renovate: datasource=(?<datasource>.+?) depName=(?<depName>.+?)(?: (?:packageName|lookupName)=(?<packageName>.+?))?(?: versioning=(?<versioning>.+?))?\\s",
        "\\s*[A-Z0-9_]+?_VERSION: (?<currentValue>.+?) # renovate: datasource=(?<datasource>.+?) depName=(?<depName>.+?)(?: (?:packageName|lookupName)=(?<packageName>.+?))?(?: versioning=(?<versioning>.+?))?\\s"
      ]
    },
    {
      "description": "Update `install-`<*> Buildpack commands and <*>`_VERSION` values in Dockerfiles.",
      "fileMatch": ["(^|/|\\.)Dockerfile$", "(^|/)Dockerfile\\.[^/]*$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.+?) depName=(?<depName>.+?)(?: (?:packageName|lookupName)=(?<packageName>.+?))?(?: versioning=(?<versioning>.+?))?\\s(?:ENV|ARG) .+?_VERSION=(?<currentValue>.+?)\\s",
        "# renovate: datasource=(?<datasource>.+?)(?: (?:packageName|lookupName)=(?<packageName>.+?))?(?: versioning=(?<versioning>.+?))?\\sRUN install-[a-z0-9]+? (?<depName>[a-z0-9-]+?) (?<currentValue>.+?)\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}semver{{/if}}"
    },
    {
      "description": "Update GitHub Action references in Markdown files.",
      "fileMatch": ["\\.md$"],
      "matchStrings": [
        "\\suses: (?<depName>[\\w-]+\\/[\\w-]+)(?<path>\\/.*)?@(?<currentValue>v\\d+\\.\\d+\\.\\d+)",
        "\\suses: (?<depName>[\\w-]+\\/[\\w-]+)(?<path>\\/.*)?@(?<currentDigest>[a-z0-9]{40}|[a-z0-9]{64}) # tag=(?<currentValue>v\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "github-tags",
      "versioningTemplate": "semver"
    }
  ]
}
