{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": [
    "config:base",
    "github>whitesource/merge-confidence:beta",
    "bfra-me/renovate-config:onboarding",
    ":preserveSemverRanges",
    ":rebaseStalePrs",
    ":prNotPending",
    ":prHourlyLimitNone",
    ":automergeBranch",
    ":maintainLockFilesWeekly",
    ":updateNotScheduled",
    ":enableVulnerabilityAlertsWithLabel(security)",
    ":semanticCommits",
    "docker:enableMajor",
    "docker:pinDigests",
    "helpers:disableTypesNodeMajor",
    "helpers:pinGitHubActionDigests",
    "replacements:all"
  ],

  "configMigration": true,
  "configWarningReuseIssue": false,

  "prConcurrentLimit": 5,

  "platformAutomerge": true,
  "internalChecksFilter": "strict",

  "schedule": [
    "after 4pm every weekday",
    "before 8am every weekday",
    "every weekend"
  ],
  "timezone": "America/Phoenix",

  "labels": ["dependencies"],

  "postUpdateOptions": ["gomodTidy", "npmDedupe", "yarnDedupeHighest"],

  "ignorePresets": [":ignoreModulesAndTests"],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/examples/**",
    "**/__tests__/**",
    "**/test/**",
    "**/tests/**",
    "**/__fixtures__/**",
    "**/out/**",
    "**/dist/**",
    "**/.yarn/**"
  ],

  "packageRules": [
    {
      "description": "Automerge update types that are not `major`",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest",
        "lockFileMaintenance"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "description": "Enable dependency dashboard approval for major updates (except Renovate)",
      "matchUpdateTypes": ["major"],
      "excludePackagePatterns": [
        "^renovate(bot)?($|\\                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         /)",
        "^(renovate|(?:ghcr.io\\/)?containerbase)\\/buildpack$",
        "^@renovatebot\\/"
      ],
      "dependencyDashboardApproval": true
    },
    {
      "description": "Delay updates until npm packages are safe from unpublishing (except Renovate)",
      "matchDatasources": ["npm"],
      "excludePackageNames": ["renovate"],
      "excludePackagePrefixes": ["@renovatebot/"],
      "extends": ["npm:unpublishSafe"],
      "prNotPendingHours": 73
    },
    {
      "description": "v prefix workaround for action updates",
      "matchDepTypes": ["action"],
      "extractVersion": "^(?<version>v\\d+\\.\\d+\\.\\d+)$",
      "versioning": "regex:^v(?<major>\\d+)(\\.(?<minor>\\d+)\\.(?<patch>\\d+))?$"
    }
  ]
}
