# EditorConfig helps developers define and maintain consistent coding styles
# between different editors and IDEs.
# http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.{graphql,go,hcl,js,json,jsx,md,sh,yaml,yml,toml,ts,tsx,tf}]
indent_size = 2
indent_style = space

[*.{py}]
indent_size = 4
indent_style = space

[Makefile]
indent_style = tab

[*.{make,mk}]
indent_style = tab
indent_size  = 4
