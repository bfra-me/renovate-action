{
    "cSpell.words": ["actioneers", "automerge", "bfra", "conventionalcommits", "Parens"],

    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit",
        "source.organizeImports": "never"
    },
    "editor.formatOnSave": false,

    "eslint.rules.customizations": [{"rule": "prettier/prettier", "severity": "off", "fixable": true}],
    "eslint.useFlatConfig": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "vue",
        "html",
        "markdown",
        "json",
        "json5",
        "jsonc",
        "yaml",
        "toml",
        "xml"
    ],

    "typescript.enablePromptUseWorkspaceTsdk": true,
    "typescript.tsdk": "node_modules/typescript/lib"
}
