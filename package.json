{
  "name": "@bfra.me/renovate-action",
  "packageManager": "pnpm@9.14.4",
  "version": "0.0.0-semantic-release",
  "private": true,
  "type": "module",
  "description": "GitHub Action for Self-Hosted Renovate",
  "main": "dist/index.js",
  "scripts": {
    "bootstrap": "pnpm install --prefer-frozen-lockfile --ignore-scripts --prefer-offline --loglevel error",
    "build": "tsup",
    "dev": "tsup --watch",
    "fix": "pnpm run format && pnpm run lint --fix",
    "format": "prettier --write .",
    "lint": "eslint --flag unstable_ts_config .",
    "check": "pnpm run check-types && pnpm run check-format && pnpm run lint",
    "check-format": "prettier --check .",
    "check-types": "tsc",
    "test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bfra-me/renovate-action.git"
  },
  "keywords": [
    "renovate",
    "self-hosted",
    "action",
    "github-action",
    "composite",
    "nodejs",
    "typescript",
    "github-actions"
  ],
  "author": "Marcus R. Brown <git@mrbro.dev>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.11.1"
  },
  "devDependencies": {
    "@bfra.me/eslint-config": "0.7.0",
    "@bfra.me/tsconfig": "0.9.3",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@swc/core": "1.9.3",
    "@types/node": "22.10.1",
    "@vitest/eslint-plugin": "1.1.13",
    "conventional-changelog-conventionalcommits": "8.0.0",
    "esbuild-plugin-license": "1.2.3",
    "eslint": "9.16.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-no-only-tests": "3.3.0",
    "eslint-plugin-prettier": "5.2.1",
    "jiti": "2.4.1",
    "js-yaml": "4.1.0",
    "prettier": "3.4.1",
    "semantic-release": "24.2.0",
    "semantic-release-export-data": "1.1.0",
    "tsup": "8.3.5",
    "typescript": "5.7.2",
    "vitest": "2.1.6"
  }
}
