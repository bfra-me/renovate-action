{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["local>bfra-me/renovate-config"],
  "packageRules": [
    {
      "description": "Raise PRs for Renovate GitHub Action and Docker updates",
      "matchPackageNames": ["renovatebot/github-action", "renovate"],
      "automergeType": "pr",
      "prCreation": "immediate",
      "printConfig": true
    }
  ]
}
