{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["local>bfra-me/renovate-config"],
  "automergeType": "pr",
  "prCreation": "immediate",
  "semanticCommitScope": "deps",
  "postUpgradeTasks": {
    "commands": ["npx prettier --no-color --write ."],
    "executionMode": "branch"
  },
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "semanticCommitType": "build"
    },
    {
      "matchDepTypes": ["dependencies"],
      "semanticCommitType": "build"
    },
    {
      "matchPackageNames": [
        "conventional-changelog-conventionalcommits",
        "semantic-release"
      ],
      "matchPackagePrefixes": ["@semantic-release/"],
      "semanticCommitType": "build"
    },
    {
      "matchFileNames": [".github/workflows/**"],
      "semanticCommitType": "ci"
    },
    {
      "matchFileNames": ["**/*.md"],
      "extends": [
        "schedule:weekly",
        "github>bfra-me/renovate-config:automerge/enabled"
      ],
      "additionalBranchPrefix": "docs-",
      "commitMessageTopic": "references to {{{depName}}}",
      "semanticCommitType": "docs",
      "semanticCommitScope": null,
      "separateMajorMinor": false,
      "minimumReleaseAge": null
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^README\\.md$"],
      "matchStrings": [
        "\"github>bfra-me/renovate-config#(?<currentValue>.+)\""
      ],
      "depNameTemplate": "bfra-me/renovate-config",
      "datasourceTemplate": "github-releases"
    },
    {
      "datasourceTemplate": "docker",
      "depNameTemplate": "renovatebot/renovate",
      "fileMatch": ["^README\\.md$"],
      "matchStrings": [
        "https://github\\.com/renovatebot/renovate/releases/tag/(?<currentValue>[^\\s]+)"
      ]
    },
    {
      "datasourceTemplate": "npm",
      "depNameTemplate": "semantic-release",
      "fileMatch": ["^\\.github\\/(actions|workflows)\\/[^/]+\\.ya?ml$"],
      "matchStrings": ["\\snpx semantic-release@(?<currentValue>.*?)\\s"]
    }
  ]
}
