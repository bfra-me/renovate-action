{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: ['github>bfra-me/renovate-config#v2.10.0'],
  customManagers: [
    {
      customType: 'regex',
      datasourceTemplate: 'docker',
      description: 'Update references to Renovate releases in README.md',
      fileMatch: ['^README\\.md$'],
      matchStrings: ['https://github\\.com/renovatebot/(?<depName>renovate)/releases/tag/(?<currentValue>[0-9\\.]+)'],
      packageNameTemplate: 'ghcr.io/renovatebot/{{{depName}}}',
      versioningTemplate: 'docker',
    },
  ],
  ignorePresets: ['github>bfra-me/renovate-config:group/github-actions'],
  packageRules: [
    {
      matchDatasources: ['docker'],
      semanticCommitType: 'build',
    },
    {
      matchPackageNames: [
        '@vercel/ncc',
        'conventional-changelog-conventionalcommits',
        'renovatebot/github-action',
        'semantic-release',
        'typescript',
      ],
      matchPackagePrefixes: ['@semantic-release/'],
      semanticCommitType: 'build',
    },
    {
      automergeType: 'pr',
      extends: ['schedule:daily'],
      groupName: 'Renovate',
      matchPackageNames: ['ghcr.io/renovatebot/renovate', 'renovatebot/renovate'],
      prCreation: 'immediate',
    },
    {
      extends: [':automergePr', ':prImmediately', 'schedule:daily'],
      commitMessageTopic: '{{{depName}}}',
      matchPackageNames: ['renovatebot/github-action'],
    },
  ],
  postUpgradeTasks: {
    commands: [
      'npm install -g pnpm@8',
      'pnpm install --frozen-lockfile --ignore-scripts',
      'git checkout -- .npmrc',
      'pnpm run build-release',
      'pnpm run format',
    ],
    executionMode: 'branch',
  },
}
