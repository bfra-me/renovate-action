{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: ['github>bfra-me/renovate-config#v3.0.4'],
  customManagers: [
    {
      customType: 'regex',
      datasourceTemplate: 'docker',
      description: 'Update references to Renovate releases in README.md.',
      fileMatch: ['^(?:README|readme)\\.md$'],
      matchStrings: ['https://github\\.com/renovatebot/(?<depName>renovate)/releases/tag/(?<currentValue>[0-9\\.]+)'],
      packageNameTemplate: 'ghcr.io/renovatebot/{{{depName}}}',
      versioningTemplate: 'docker',
    },
  ],
  packageRules: [
    {
      matchDatasources: ['docker'],
      semanticCommitType: 'build',
    },
    {
      matchPackageNames: [
        '@vercel/ncc',
        'conventional-changelog-conventionalcommits',
        'renovatebot/github-action',
        'semantic-release',
        'typescript',
      ],
      matchPackagePrefixes: ['@semantic-release/'],
      semanticCommitType: 'build',
    },
    {
      extends: ['github>bfra-me/renovate-config:maintenance/automergeForCI', 'schedule:daily'],
      matchPackageNames: ['ghcr.io/renovatebot/renovate', 'renovatebot/renovate'],
    },
    {
      extends: ['schedule:daily'],
      commitMessageTopic: '{{{depName}}}',
      matchPackageNames: ['renovatebot/github-action'],
    },
  ],
  postUpgradeTasks: {
    commands: [
      'npm install -g pnpm@8',
      'pnpm install --frozen-lockfile --ignore-scripts',
      'git checkout -- .npmrc',
      'pnpm run build-release',
      'pnpm run format',
    ],
    executionMode: 'branch',
  },
}
