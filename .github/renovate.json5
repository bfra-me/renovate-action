{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: ['github>bfra-me/renovate-config#v3.4.2', 'github>bfra-me/renovate-config:internal.json5#v3.4.2'],
  customManagers: [
    {
      customType: 'regex',
      datasourceTemplate: 'docker',
      description: 'Update references to Renovate releases in README.md.',
      fileMatch: ['^(?:README|readme)\\.md$'],
      matchStrings: ['https://github\\.com/renovatebot/(?<depName>renovate)/releases/tag/(?<currentValue>[0-9\\.]+)'],
      packageNameTemplate: 'ghcr.io/renovatebot/{{{depName}}}',
      versioningTemplate: 'docker',
    },
  ],
  packageRules: [
    {
      matchDatasources: ['docker'],
      semanticCommitType: 'build',
    },
    {
      matchPackageNames: ['@vercel/ncc', 'typescript'],
      semanticCommitType: 'build',
    },
    {
      matchUpdateTypes: ['lockFileMaintenance'],
      semanticCommitType: 'build',
    },
    {
      matchPackageNames: ['ghcr.io/renovatebot/renovate', 'renovatebot/renovate'],
      extends: ['schedule:daily'],
      automergeType: 'pr',
      minor: {
        semanticCommitType: 'feat',
      },
      patch: {
        semanticCommitType: 'fix',
      },
      platformAutomerge: true,
      prCreation: 'immediate',
      rebaseWhen: 'conflicted',
    },
    {
      matchPackageNames: ['renovatebot/github-action'],
      extends: ['schedule:daily'],
      commitMessageTopic: '{{{depName}}}',
      minor: {
        semanticCommitType: 'feat',
      },
      patch: {
        semanticCommitType: 'fix',
      },
    },
  ],
  postUpgradeTasks: {
    commands: [
      'npm install -g pnpm@8',
      'pnpm install --frozen-lockfile --ignore-scripts',
      'git checkout -- .npmrc',
      'pnpm run build-release',
      'pnpm run format',
    ],
    executionMode: 'branch',
  },
}
